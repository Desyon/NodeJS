{
  "extends": "google",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "root": true,
  "rules": {
    "space-before-function-paren": "off",
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "new-cap": [
      "warn",
      {
        "capIsNew": false
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 100,
        "tabWidth": 2
      }
    ],
    "semi": "warn",
    "eol-last": "warn"
  },
  "env": {
    "node": true,
    "browser": true
  }
}